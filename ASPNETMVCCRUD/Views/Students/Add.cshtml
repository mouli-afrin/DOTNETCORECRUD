@model ASPNETMVCCRUD.Models.Add
@{
}
<h1>AddEmployee</h1>
<form method="post" action="Add" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="S_Name">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Email Address</label>
        <input type="email" class="form-control" asp-for="S_Email">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">DateOfBirth</label>
        <input type="date" class="form-control" asp-for="S_DateOfBirth">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Deparment</label>
        <input type="text" class="form-control" asp-for="S_Department">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
